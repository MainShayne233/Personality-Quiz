.row
  .col-md-4.col-md-offset-3
    .well

      %h1 Sign Up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        = f.label :email
        %br
        = f.email_field :email, autofocus: true, style: "width: 80%"
        %br
        %br
        = f.label :password
        %br
        = f.password_field :password,  style: "width: 80%"
        %br
        %br
        = f.label :password_confirmation, "Confirmation"
        %br
        = f.password_field :password_confirmation,  style: "width: 80%"
        %br
        %br
        .center
          .continer=f.submit "Sign Up", class: "btn btn-primary", style: "width: 100px;"
          %br
          .conainer= link_to "Log in", new_user_session_path, class: "btn btn-default", style: "width: 100px;"
      
